.header-wrap{
    width:100%;
    height:80px;
    border-bottom:2px solid #f5f5f5;
    margin:5px auto 0;
}
.public-head-layout{
    width: 1000px;
    height: 80px;
    margin:0 auto;
}
.public-head-layout a img{
    max-width:240px;
    max-height:60px;
    margin-top: 10px;
}
.right_login{
    float:right;
    margin-top: 50px;
    font-size: 14px;
    color: #AAA;
}
.right_login a{
    margin-left:4px;
    font-weight: bold;
    text-decoration: none;
}



.container{
    width: 100%;
    height: 680px;
    background:url(../img/register_bg.png) repeat 50% 50%;
}
.register_box{
    width: 860px;
    height: 560px;
    background:rgba(0,0,0,0.15);
    margin: 60px auto;
}
.container:before{
    content:"";
    display:table;
}
.register_box_layout{
    width: 840px;
    height: 540px;
    background-color: #fff;
    border:1px solid #ccc;
    position:relative;
    margin:0 auto;
    top: 10px;
}
.left{
    width: 600px;
    height: 520px;
    background-color:#fff;
    float:left;
    margin-top: 10px;
    margin-left: 10px;
}
.div_form{
    width: 620px;
    height: 450px;
    background-color: #fff;
}
.left .left_wrap a{
    display:block;
    width: 300px;
    height: 40px;
    border-bottom:3px solid red;
    text-decoration: none;
    text-align: center;
    margin-bottom:50px;
}
.item_fore1,.item_fore2,.item_fore3{
    width: 400px;
    height: 54px;
    border:1px solid #666;
    margin: 0 auto;
    padding-left: 30px;

}
.item_fore2{
    margin-top: -1px;
}
.item_fore3{
    margin-top: 50px;
    margin-bottom: 30px;
}
#iphone,#yzm,#imsg{
    border:none;
    outline: none;
    width: 70%;
    height: 52px;
}
.next_div{
    width: 398px;
    height: 42px;
    background-color: #f32613;
    border-radius:3px;
    margin: 0 auto;
    text-align: center;
    line-height: 42px;
}
.next{
    font-size:18px;
    color: #fff;
    background-color: #f32613;
    border-style:none;
    outline:none;
}
.right{
    width: 220px;
    height: 520px;
    background-color:#fff;
    float:right;
    margin-top: 10px;
    margin-right: 9px;
    border-left:1px solid #e6e6e6;
}
.right h5{
	font-size:14px;
	color:#333;
	margin-left: 20px;
}
.api-login{
    width: 100%;
    border-bottom:1px dashed #e6e6e6;
    padding-bottom: 20px;
}
.api-login i{
    width: 32px;
    height: 32px;
    background: url(../img/login_pic.png) no-repeat;
    display:inline-block;
    margin-left: 6px;
}
.api-login a.qq i{
    margin-left: 50px;
}
.api-login a.sina i{
    background-position: -32px 0;
}
.api-login a.wechat i{
    background-position: -64px 0;
}
.right ol li{
	list-style:none;
}






.my_footer{
    width: 100%;
    margin-top: 60px;
}